@startuml Send Spin Result to Players
title Send Spin Result to Players

boundary    UI1
boundary    UI2  

participant Client1 #Plum
participant Client2 #Plum

box "Game Server" #LightSteelBlue
participant MessageServer as Server
participant ExecutiveLogic
end box


    group#Cyan Send Spin Result to Players
        ExecutiveLogic -> ExecutiveLogic : incrementSpinCounter()

        Server <- ExecutiveLogic: queryServer("SPIN_RESULT", [wheel_result, spinsRemain])
        Client1 <- Server: send("SPIN_RESULT", [wheel_result, spinsRemain])
        Client2 <- Server: send("SPIN_RESULT", [wheel_result, spinsRemain])
            
        UI1 <- Client1: updateDisplay("SPIN_RESULT",[wheel_result, spinsRemain])
        UI2 <- Client2: updateDisplay("SPIN_RESULT",[wheel_result, spinsRemain])

    end

@enduml
